@model CDB_SZFPZ.Models.Projekt

@{
    ViewBag.Title = "Create";
}

<h2 style="text-align:center">Stovori projekt</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-3">
                <label style="clear: both; text-align: left;">
                    Naziv*
                </label>
                @Html.EditorFor(model => model.NazivProjekt, new { htmlAttributes = new { @Value = ViewBag.Naziv, @placeholder = "Enter a value", @class = "form-control", style = "text-align:center;" } })
                @Html.ValidationMessageFor(model => model.NazivProjekt, "", new { @class = "text-danger" })
                <text style="color: red">
                    @ViewBag.ErrorNaziv
                </text>
            </div>
            <div class="col-sm-3">
                <label style="clear: both; text-align: left;">
                    Datum pokretanja
                </label>
                @Html.TextBox("GodinaProjekt", "", new { @class = "form-control", @placeholder = "Nije obvezno", style = "text-align:center;", type = "date" })
                @Html.ValidationMessageFor(model => model.GodinaProjekt, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <label style="clear: both; text-align: left;">
                    Web adresa
                </label>
                @Html.EditorFor(model => model.WebAdresaProjekta, new { htmlAttributes = new { @Value = ViewBag.Web, @placeholder = "Enter a value", @class = "form-control", style = "text-align:center" } })
                @Html.ValidationMessageFor(model => model.WebAdresaProjekta, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-3">
                <label style="clear: both; text-align: left;">
                    Status*
                </label>
                @Html.DropDownList("StatusProjekta", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusProjekta, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-3">
                <label style="clear: both; text-align: left;">
                    Prioritet*
                </label>
                @Html.DropDownList("PrioritetProjekta", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PrioritetProjekta, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-3">
                <label style="clear: both; text-align: left;">
                    Potrebne financije [HRK]
                </label>
                @Html.TextBox("CiljFRFinancije", "", new { maxlength = 9, @min = 0, @Value = ViewBag.Financ, @placeholder = "Enter a value", @class = "form-control", style = "text-align:center;" })
                @*@Html.EditorFor(model => model.CiljFRFinancije, new { htmlAttributes = new { @min = 0, @Value = ViewBag.Financ, @placeholder = "Enter a value", @class = "form-control", style = "text-align:center;" } })*@
                @Html.ValidationMessageFor(model => model.CiljFRFinancije, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-9">
                <label style="clear: both; text-align: left;">
                    Potrebni materijali
                </label>
                @*@Html.EditorFor(model => model.CiljFRMaterijali, new { htmlAttributes = new { @Value = ViewBag.Mat, @placeholder = "Enter a value", @class = "form-control", style = "text-align:center;" } })*@
                @Html.TextArea("CiljFRMaterijali", (string)(ViewBag.Mat), new { @class = "form-control", @Value = ViewBag.Mat, @placeholder = "Enter a value", style = "text-align:center;" })
                @Html.ValidationMessageFor(model => model.CiljFRMaterijali, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-lg-12">
                <label style="clear: both; text-align: left;">
                    Opis
                </label>
                @*@Html.EditorFor(model => model.OpisProjekt, new { htmlAttributes = new { @Value = ViewBag.Opis, @placeholder = "Enter a value", @class = "form-control", style = "text-align:center;" } })*@
                @Html.TextArea("OpisProjekt", (string)(ViewBag.Opis), new { @class = "form-control", @Value = ViewBag.Opis, @placeholder = "Enter a value", style = "text-align:center;" })
                @Html.ValidationMessageFor(model => model.OpisProjekt, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <h4 style="text-align:center">
            <div class="form-group">
                <div class="form-actions no-color">
                    <input type="submit" value="Create" class="btn btn-default" style="font-size : 14px; height:50px; width:160px;" />
                </div>
            </div>
            <hr />
            @Html.ActionLink("Popis projekata", "Index")
        </h4>
    </div>
}